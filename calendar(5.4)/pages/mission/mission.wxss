/* 外层视图 */
.cont{ 
  width: 100%; 
  margin: 0 auto; 
} 
 
.list{ 
  position: relative; 
  height: 170rpx; 
margin: 20rpx; 
border-radius: 10rpx;
  line-height: 170rpx; 
  overflow: hidden; 
} 
/* 删除外层包裹视图 */
.list_del{ 
  position: absolute; 
  top:0; 
} 
.list_del.txt{ 
  position: relative;
  background-color: #fff; 
  width: 100%; 
  z-index: 5; 
  padding:0 10rpx; 
  transition: left 0.2s ease-in-out; 
  white-space:nowrap; 
  overflow:hidden; 
  text-overflow:ellipsis; 
} 
/* 删除 */
.list_del.del{ 
  background-color:green; 
  width: 180rpx;text-align: center; 
  z-index: 4; 
  right: 0; 
  color: #fff 
} 

.list_del.com{
   background-color:yellow; 
  width: 180rpx;text-align: center; 
  z-index: 4; 
  right: 0; 
  color: #fff 
}

