/* pages/teamhall/teamhall.wxss */

page {
  background-color: #f5f5f5;
}

.searcher {
  width: 100%;
  margin: 0 auto;
  position: relative;
}

.idsearch_title {
  position: absolute;
  height: 30rpx;
  width: 30rpx;
  top: 35rpx;
  left: 25rpx;
}

.idsearch {
  position: absolute;
  width: 100%;
  top: 25rpx;
  left: 80rpx;
  height: 5rpx;
}

.idsearcher {
  border-radius: 10%;
  background-color: #fff;
  position: absolute;
  height: 15rpx;
  width: 290rpx;
  font-size: 23rpx;
}

.idsearcher_placeholder {
  font-size: 23rpx;
}

.typesearch_title {
  position: absolute;
  height: 30rpx;
  width: 30rpx;
  top: 33rpx;
  left: 400rpx;
}

.typesearch {
  border-radius: 10%;
  background-color: #fff;
  position: absolute;
  top: 31rpx;
  left: 440rpx;
  vertical-align: middle;
  color: #888;
  font-size: 25rpx;
  height: 45rpx;
  width: 270rpx;
}

.pickers {
  vertical-align: middle;
}

.list {
  position: relative;
  height: 170rpx;
  margin: 20rpx;
  border-radius: 10rpx;
  line-height: 170rpx;
  overflow: hidden;
}

/* 外层视图 */

.cont {
  width: 100%;
  margin: 0 auto;
  position: absolute;
  top: 80rpx;
}

/* 删除外层包裹视图 */

.list_del {
  position: absolute;
  top: 0;
}

.list_del.txt {
  position: relative;
  background-color: #fff;
  width: 100%;
  z-index: 5;
  padding: 0 10rpx;
  transition: left 0.2s ease-in-out;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 列表图片 */

.list_img {
  width: 105rpx;
  height: 105rpx;
  vertical-align: middle;
  margin: 20rpx;
}

/* 队长头像 */

.list_head {
  position: absolute;
  width: 55rpx;
  height: 55rpx;
  top: 35rpx;
  right: 310rpx;
  border-radius: 50%;
}

/* 列表名称 */

.list_name {
  position: absolute;
  left: 168rpx;
  bottom: 33rpx;
}

/* 列表type */

.list_type {
  position: absolute;
  right: 168rpx;
  bottom: 23rpx;
  font-size: 25rpx;
  color: #818181;
}

/* 列表人数 */

.list_member {
  position: absolute;
  left: 168rpx;
  top: 50rpx;
  font-size: 25rpx;
  color: #818181;
}

.list_id {
  position: absolute;
  left: 168rpx;
  top: 10rpx;
  font-size: 25rpx;
  color: #818181;
}

/* 活动时间 */

.list_datas {
  position: absolute;
  right: 168rpx;
  top: 35rpx;
  font-size: 25rpx;
  color: #818181;
}

.list_apply {
  position: absolute;
  width: 50rpx;
  height: 40rpx;
  font-size: 25rpx;
  right: 80rpx;
}

.createteam {
  position: fixed;
  width: 80rpx;
  height: 80rpx;
  bottom: 170rpx;
  right: 40rpx;
  z-index: 9999;
}
