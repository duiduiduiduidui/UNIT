page {
  background-color: #f5f5f5;
}

/* 外层视图 */

.cont {
  width: 100%;
  margin: 0 auto;
}

.list {
  position: relative;
  height: 170rpx;
  margin: 20rpx;
  border-radius: 10rpx;
  line-height: 170rpx;
  overflow: hidden;
}

/* 删除外层包裹视图 */

.list_del {
  position: absolute;
  top: 0;
}

.list_del.txt {
  position: relative;
  background-color: #fff;
  width: 100%;
  z-index: 5;
  padding: 0 10rpx;
  transition: left 0.2s ease-in-out;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}



/* 列表图片 */

.list_img {
  width: 105rpx;
  height: 105rpx;
  vertical-align: middle;
  margin: 20rpx;
}

/* 队长头像 */

.list_head {
  position: absolute;
  width: 55rpx;
  height: 55rpx;
  top: 35rpx;
  right: 310rpx;
  border-radius: 50%;
}

